{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "upload": {
        "ClusterId": "fileCluster",
        "Match": {
          "Path": "/files/upload"
        }
      },
      "download": {
        "ClusterId": "fileCluster",
        "Match": {
          "Path": "/files/{**catch-all}"
        }
      },
      "analyze": {
        "ClusterId": "analysisCluster",
        "Match": {
          "Path": "/analysis/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "fileCluster": {
        "Destinations": {
          "dest1": {
            "Address": "http://FileStoringService:80/"
          }
        }
      },
      "analysisCluster": {
        "Destinations": {
          "dest1": {
            "Address": "http://FileAnalysisService:80/"
          }
        }
      }
    }
  }
}
